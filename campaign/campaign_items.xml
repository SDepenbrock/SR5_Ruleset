<root>
	<windowclass name="itemsmall">
		<margins control="0,0,0,2" />
		<script file="campaign/scripts/campaign_list_record.lua" />
		<sheetdata>
			<hn name="isidentified">
				<script>
					function onValueChanged()
					window.onIDChanged();
					end
				</script>
			</hn>

			<link_list name="open">
				<class>item</class>
			</link_list>

			<genericcontrol name="rightanchor">
				<anchored height="0" width="0">
					<top />
					<right />
				</anchored>
			</genericcontrol>
			<button_idelete name="idelete">
				<anchored>
					<top />
					<right parent="rightanchor" anchor="left" relation="relative"
						offset="-5" />
				</anchored>
			</button_idelete>
			<icon_access name="access" />
			<icon_modified name="modified" />

			<string_list_name name="name">
				<empty>&#171; New Item &#187;</empty>
			</string_list_name>
			<string_list_name name="nonid_name">
				<empty>Unidentified Item</empty>
			</string_list_name>
		</sheetdata>
	</windowclass>

	<windowclass name="itemlist">
		<frame>campaignlistwithtabs</frame>
		<placement>
			<size width="275" height="350" />
		</placement>
		<sizelimits>
			<minimum width="200" height="300" />
			<dynamic />
		</sizelimits>
		<nodelete />
		<sheetdata>
			<banner_campaign>
				<icon>title_items</icon>
			</banner_campaign>

			<button_parcel_list />

			<list_campaign name="list">
				<datasource>.</datasource>
				<class>itemsmall</class>
				<script>
					function onInit()
					OptionsManager.registerCallback("MIID", StateChanged);
					end

					function onClose()
					OptionsManager.unregisterCallback("MIID", StateChanged);
					end

					function StateChanged()
					for _,w in ipairs(getWindows()) do
					w.onIDChanged();
					end
					applySort();
					end

					function onSortCompare(w1, w2)
					return ItemManager.getSortName(w1.getDatabaseNode()) &gt;
					ItemManager.getSortName(w2.getDatabaseNode());
					end

					function onDrop(x,
					y, draginfo)
					if draginfo.isType("shortcut") then
					return CampaignDataManager.handleDrop("item", draginfo);
					end
					end
				</script>
			</list_campaign>
			<scrollbar_list />

			<anchor_campaign />
			<button_iedit_campaign />
			<button_iadd_campaign2>
				<class>item</class>
			</button_iadd_campaign2>
			<filter_campaign />

			<categories>
				<targetcontrol>list</targetcontrol>
			</categories>

			<resize_campaignlistwithtabs />
			<close_campaignlist />
		</sheetdata>
	</windowclass>
</root>
