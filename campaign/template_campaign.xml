	<template name="icon_record_locked">
		<genericcontrol>
			<icon>record_readonly</icon>
			<tooltip text="Read Only" />
			<script>
				function onInit()
				local node = window.getDatabaseNode();
				local bShow = (not node or node.isReadOnly());
				setVisible(bShow);
				end
			</script>
		</genericcontrol>
	</template>
	<template name="button_record_locked">
		<buttoncontrol>
			<state icon="padlock_open" tooltip="Unlocked" />
			<state icon="padlock_closed" tooltip="Locked" />
			<script>
				local bUpdating = false;
				local nodeSrc = nil;

				function onInit()
				local node = window.getDatabaseNode();
				if node and not node.isReadOnly() then
				nodeSrc = node.createChild(getName(), "number");
				if nodeSrc.getValue() ~= 0 then
				setValue(1);
				end
				nodeSrc.onUpdate = onUpdate;
				else
				setVisible(false);
				end
				end

				function onUpdate()
				if nodeSrc and not bUpdating then
				bUpdating = true;
				if nodeSrc.getValue() == 0 then
				setValue(0);
				else
				setValue(1);
				end
				bUpdating = false;
				end
				end

				function onValueChanged()
				if nodeSrc and not bUpdating then
				bUpdating = true;
				if getValue() == 0 then
				nodeSrc.setValue(0);
				else
				nodeSrc.setValue(1);
				end
				bUpdating = false;
				end

				if window.onLockChanged then
				window.onLockChanged();
				end
				end
			</script>
		</buttoncontrol>
	</template>
