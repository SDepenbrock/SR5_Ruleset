<root>
	<windowclass name="library_booklistcategory">
		<frame>rowshade</frame>
		<sizelimits>
			<minimum height="30" />
		</sizelimits>
		<sheetdata>
			<stringcontrol name="name">
				<bounds>5,3,-1,24</bounds>
				<font>reference-h</font>
				<static />
			</stringcontrol>
		</sheetdata>
	</windowclass>

	<windowclass name="library_booklistentry">
		<sizelimits>
			<minimum height="70" />
		</sizelimits>
		<script>
			function onInit()
			local sName = getDatabaseNode().getModule();
			name.setValue(sName);
			thumbnail.setIcon("module_" .. sName);
			end

			function activate()
			local pagesource = getDatabaseNode().getChild("entries");
			windowlist.window.pagelist.setDatabaseNode(pagesource);
			end
		</script>
		<sheetdata>
			<hsc name="category" />

			<genericcontrol name="thumbnail">
				<bounds>4,0,63,63</bounds>
				<script>
					function onClickDown(button, x, y)
					return true;
					end

					function onClickRelease(button, x, y)
					window.activate();
					return true;
					end
				</script>
			</genericcontrol>
			<stringcontrol name="name">
				<bounds>70,20,-1,20</bounds>
				<font>sheetlabel</font>
				<script>
					function onHover(bOnControl)
					setUnderline(bOnControl);
					end

					function onClickDown(button, x, y)
					return true;
					end

					function onClickRelease(button, x, y)
					window.activate();
					return true;
					end
				</script>
			</stringcontrol>
		</sheetdata>
	</windowclass>

	<windowclass name="library_pagelistentry">
		<sizelimits>
			<minimum height="20" />
		</sizelimits>
		<script>
		</script>
		<sheetdata>
			<linkfield name="librarylink">
				<bounds>0,0,20,20</bounds>
			</linkfield>
			<stringc_list_link name="name">
				<bounds>25,0,-1,-1</bounds>
				<linktarget>librarylink</linktarget>
			</stringc_list_link>
		</sheetdata>
	</windowclass>

	<windowclass name="library">
		<frame>utilitybox3</frame>
		<placement>
			<size width="700" height="550" />
		</placement>
		<sizelimits>
			<minimum width="500" height="250" />
			<dynamic />
		</sizelimits>
		<sheetdata>
			<windowtitlebar>
				<static>Library</static>
			</windowtitlebar>

			<windowlist name="booklist">
				<bounds>35,50,240,-70</bounds>
				<frame name="groupbox" offset="10,10,20,10" />
				<skipempty />
				<class>library_booklistentry</class>
				<datasource>library</datasource>
				<useallmodules />
				<script file="utility/scripts/library_list_book.lua" />
			</windowlist>
			<scrollbar>
				<bounds>270,60,20,-80</bounds>
				<target>booklist</target>
			</scrollbar>

			<button_text>
				<anchored width="60" height="20">
					<left offset="125" />
					<bottom offset="-30" />
				</anchored>
				<state text="Modules" />
				<script>
					function onButtonPress()
					Interface.openWindow("moduleselection", "");
					end
				</script>
			</button_text>

			<windowlist name="pagelist">
				<bounds>305,50,-43,-70</bounds>
				<frame name="groupbox" offset="15,10,20,10" />
				<skipempty />
				<class>library_pagelistentry</class>
				<filter>
					<control>filter</control>
				</filter>
				<filteron>
					<control>name</control>
				</filteron>
			</windowlist>
			<scrollbar>
				<bounds>-48,60,20,-80</bounds>
				<target>pagelist</target>
			</scrollbar>

			<filter name="filter">
				<bounds>320,-50,-35,20</bounds>
			</filter>

			<resize_utilitybox3 />
			<close_utilitybox3 />
		</sheetdata>
	</windowclass>
</root>
