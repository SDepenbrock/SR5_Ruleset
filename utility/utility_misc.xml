<root>
	<windowclass name="portraitselection_entry">
		<sizelimits>
			<minimum width="75" height="75" />
		</sizelimits>
		<sheetdata>
			<portraitselectioncontrol name="portrait">
				<bounds>0,0,-1,-1</bounds>
				<base>charlist_base</base>
				<mask>charlist_mask</mask>
				<script>
					function onDoubleClick(x, y)
					window.windowlist.window.activate(getFile());
					return true;
					end

					function onDragStart(button, x, y, draginfo)
					draginfo.setType("portraitselection");
					draginfo.setStringData(getFile());
					draginfo.setIcon("button_link");

					return true;
					end
				</script>
			</portraitselectioncontrol>
		</sheetdata>
	</windowclass>

	<windowclass name="portraitselection_up">
		<sizelimits>
			<minimum width="75" height="75" />
		</sizelimits>
		<sheetdata>
			<genericcontrol name="icon">
				<bounds>0,0,-1,-1</bounds>
				<icon>tokenbagup</icon>
				<tooltip nodelay="true" />
				<script>
					function onDoubleClick(x, y)
					window.windowlist.popPath();
					return true;
					end
				</script>
			</genericcontrol>
		</sheetdata>
	</windowclass>

	<windowclass name="portraitselection_dir">
		<sizelimits>
			<minimum width="75" height="75" />
		</sizelimits>
		<sheetdata>
			<genericcontrol name="icon">
				<bounds>0,0,-1,-1</bounds>
				<icon>tokenbag</icon>
				<tooltip nodelay="true" />
				<script>
					function onDoubleClick(x, y)
					window.windowlist.addPath(getTooltipText());
					return true;
					end
				</script>
			</genericcontrol>
		</sheetdata>
	</windowclass>

	<windowclass name="portraitselection">
		<frame>utilitybox2</frame>
		<placement>
			<size width="460" height="300" />
		</placement>
		<sizelimits>
			<dynamic />
		</sizelimits>
		<script>
			local nodeChar = nil;

			function SetLocalNode(nodeSet)
			nodeChar = nodeSet;
			end

			function activate(sFile)
			UtilityManager.setCharPortrait(nodeChar, sFile);
			close();
			end
		</script>
		<sheetdata>
			<hsc name="identity" />

			<windowlist name="list">
				<class>portraitselection_entry</class>
				<bounds>30,30,-30,-30</bounds>
				<columns width="75" fillwidth="true" />
				<skipempty />
				<script file="utility/scripts/portraitselect.lua" />
			</windowlist>
			<scrollbar_list />

			<resize_utilitybox2 />
			<close_utilitybox2 />
		</sheetdata>
	</windowclass>

	<windowclass name="pointerselection">
		<frame>utilitybox2</frame>
		<placement>
			<size width="250" height="255" />
		</placement>
		<sizelimits>
			<minimum width="250" height="255" />
			<maximum width="250" height="255" />
		</sizelimits>
		<sheetdata>
			<genericcontrol>
				<bounds>20,20,210,205</bounds>
				<script file="utility/scripts/pointer_selection.lua" />
			</genericcontrol>

			<close_utilitybox2 />
		</sheetdata>
	</windowclass>

	<template name="lightingselection">
		<buttoncontrol>
			<light>
				<system>FFFFFFFF</system>
				<window>FFFFFFFF</window>
				<control>FFFFFFFF</control>
				<content>FFFFFFFF</content>
			</light>
			<script>
				function onButtonPress()
				Interface.setLighting(light[1].system[1], light[1].window[1],
				light[1].control[1], light[1].content[1]);
				window.close();
				return true;
				end
			</script>
		</buttoncontrol>
	</template>

	<windowclass name="lightingselection">
		<frame>utilitybox2</frame>
		<placement>
			<size width="165" height="460" />
		</placement>
		<sheetdata>
			<lightingselection name="day">
				<bounds>32,30,100,100</bounds>
				<icon>
					<normal>lighting_day</normal>
				</icon>
				<light />
			</lightingselection>
			<lightingselection name="night">
				<anchored to="day" position="below" height="100" />
				<icon>
					<normal>lighting_night</normal>
				</icon>
				<light>
					<window>FFFFB8A4</window>
				</light>
			</lightingselection>
			<lightingselection name="fire">
				<anchored to="night" position="below" height="100" />
				<icon>
					<normal>lighting_fire</normal>
				</icon>
				<light>
					<window>FFB1C6F4</window>
				</light>
			</lightingselection>
			<lightingselection name="forest">
				<anchored to="fire" position="below" height="100" />
				<icon>
					<normal>lighting_forest</normal>
				</icon>
				<light>
					<window>FFE0FDE6</window>
				</light>
			</lightingselection>

			<close_utilitybox2 />
		</sheetdata>
	</windowclass>

	<windowclass name="tokenbag">
		<frame>tokenbag</frame>
		<placement>
			<size width="400" height="400" />
		</placement>
		<sizelimits>
			<dynamic />
			<minimum width="400" height="400" />
		</sizelimits>
		<script>
			function onInit()
			if not User.isHost() then
			tokens.setStaticBounds(20,75,-35,-40);
			end
			end
		</script>
		<sheetdata>
			<windowtitlebar>
				<static>Tokens</static>
			</windowtitlebar>

			<filter name="filter">
				<bounds>40,45,-90,20</bounds>
			</filter>
			<buttoncontrol>
				<anchored position="insidetopright" offset="35,45" width="20"
					height="20" />
				<icon normal="button_zoomin" pressed="button_zoomin_down" />
				<tooltip text="Zoom In" />
				<script>
					function onButtonPress()
					local z = window.tokens.getZoom();
					window.tokens.setZoom(z + 0.2);
					end
				</script>
			</buttoncontrol>
			<buttoncontrol>
				<anchored position="insidetopright" offset="60,45" width="20"
					height="20" />
				<icon normal="button_zoomout" pressed="button_zoomout_down" />
				<tooltip text="Zoom Out" />
				<script>
					function onButtonPress()
					local z = window.tokens.getZoom();
					window.tokens.setZoom(z - 0.2);
					end
				</script>
			</buttoncontrol>

			<tokenbag name="tokens">
				<bounds>20,75,-45,-75</bounds>
				<tokenarea>0,0,-1,-50</tokenarea>
				<bagbar frame="tokenbagbar" rect="0,-50,-1,50" slotsize="50,50" />
				<bag>
					<icon>tokenbag</icon>
					<top>tokenbagtop</top>
					<up>tokenbagup</up>
					<shared>tokenbagshared</shared>
				</bag>
				<grid width="50" height="50" />
				<filter control="filter" />
			</tokenbag>
			<scrollbar name="tokensscroll">
				<anchored to="tokens">
					<top offset="12" />
					<bottom offset="-62" />
				</anchored>
				<target>tokens</target>
			</scrollbar>

			<button_text name="button_tokens_host">
				<anchored width="70" height="20">
					<left anchor="center" offset="-125" />
					<bottom offset="-40" />
				</anchored>
				<state text="GM" />
				<gmvisibleonly />
				<script>
					function onButtonPress()
					Interface.openDataFolder("tokens/host");
					end
				</script>
			</button_text>
			<button_text name="button_tokens_shared">
				<anchored to="button_tokens_host" position="righthigh"
					offset="20,0" width="70" height="20" />
				<state text="Shared" />
				<gmvisibleonly />
				<script>
					function onButtonPress()
					Interface.openDataFolder("tokens/shared");
					end
				</script>
			</button_text>
			<button_text name="button_modules">
				<anchored to="button_tokens_shared" position="righthigh"
					offset="20,0" width="70" height="20" />
				<state text="Modules" />
				<gmvisibleonly />
				<script>
					function onButtonPress()
					Interface.openWindow("moduleselection", "");
					end
				</script>
			</button_text>

			<resize_tokenbag />
			<close_tokenbag />
		</sheetdata>
	</windowclass>
</root>
