<root>
	<windowclass name="combattracker_host">
		<frame>ctbox</frame>
		<placement>
			<size width="400" height="500" />
		</placement>
		<sizelimits>
			<minimum width="400" height="400" />
			<dynamic />
		</sizelimits>
		<softclose />
		<nodelete />
		<sheetdata>
			<windowtitlebar>
				<static>Combat Tracker</static>
			</windowtitlebar>

			<frame_ct>
				<bounds>22,28,40,35</bounds>
			</frame_ct>
			<buttoncontrol name="button_global_visibility">
				<anchored position="insidetopleft" offset="33,37" width="20"
					height="20" />
				<state icon="visibilityoff" tooltip="Show all NPCs" />
				<state icon="visibilityon" tooltip="Hide all NPCs" />
				<script>
					function onValueChanged()
					window.list.toggleVisibility();
					end
				</script>
			</buttoncontrol>
			<label>
				<bounds>63,38,-163,20</bounds>
				<static>Name</static>
				<center />
			</label>
			<label name="label_init">
				<anchored position="insidetopright" offset="123,38" width="40" />
				<static>Order</static>
				<tooltip text="Turn order" />
				<center />
			</label>
			<frame_ct>
				<bounds>-103,28,60,35</bounds>
			</frame_ct>
			<buttoncontrol name="button_global_spacing">
				<bounds>-93,35,20,20</bounds>
				<state icon="button_space" />
				<state icon="button_space_down" />
				<script>
					function onValueChanged()
					window.list.toggleSpacing();
					end
				</script>
			</buttoncontrol>
			<buttoncontrol name="button_global_effects">
				<bounds>-73,35,20,20</bounds>
				<state icon="button_effect" />
				<state icon="button_effect_down" />
				<script>
					function onValueChanged()
					window.list.toggleEffects();
					end
				</script>
			</buttoncontrol>

			<windowlist name="list">
				<bounds>0,65,-20,-55</bounds>
				<datasource>.list</datasource>
				<class>ct_entry</class>
				<empty font="list-empty" text="Drop PC, NPC or encounter links to add entries." />
				<script file="ct/scripts/ct.lua" />
			</windowlist>
			<scrollbar_list />

			<genericcontrol name="icon_setactive">
				<bounds>28,-53,33,40</bounds>
				<activeicon>ct_active</activeicon>
				<cursor hover="hand" />
				<script>
					function onInit()
					widget = addBitmapWidget(activeicon[1]);
					end

					function onDragStart(button, x, y, draginfo)
					draginfo.setType("combattrackeractivation");
					draginfo.setIcon(activeicon[1]);
					widget.setVisible(false);

					return true;
					end

					function onDragEnd(draginfo)
					widget.setVisible(true);
					end
				</script>
			</genericcontrol>
			<buttoncontrol name="advance_actor">
				<bounds>62,-45,33,26</bounds>
				<icon normal="button_ctnextactor" pressed="button_ctnextactor_down" />
				<tooltip text="Next actor" />
				<script>
					function onButtonPress()
					CombatManager.nextActor();
					end

					function onDragStart(button, x, y, draginfo)
					draginfo.setType("combattrackernextactor");
					draginfo.setIcon(icon[1].normal[1]);

					return true;
					end
				</script>
			</buttoncontrol>

			<button_ct_friendfoe name="ffsource_friend">
				<anchored>
					<bottom offset="-23" />
					<left anchor="center" offset="-35" />
				</anchored>
				<icon>ct_faction_friend</icon>
				<value>friend</value>
				<tooltip text="Friendly" />
			</button_ct_friendfoe>
			<button_ct_friendfoe name="ffsource_neutral">
				<anchored>
					<bottom offset="-23" />
					<left anchor="center" offset="-10" />
				</anchored>
				<icon>ct_faction_neutral</icon>
				<value>neutral</value>
				<tooltip text="Neutral" />
			</button_ct_friendfoe>
			<button_ct_friendfoe name="ffsource_foe">
				<anchored>
					<bottom offset="-23" />
					<left anchor="center" offset="15" />
				</anchored>
				<icon>ct_faction_foe</icon>
				<value>foe</value>
				<tooltip text="Hostile" />
			</button_ct_friendfoe>

			<buttoncontrol name="button_menu">
				<bounds>26,11,40,20</bounds>
				<icon normal="button_menu" pressed="button_menu_down" />
				<tooltip text="Click for CT menu" />
				<script file="ct/scripts/ct_menu.lua" />
			</buttoncontrol>

			<label name="roundcounterlabel">
				<bounds>-145,-43,50,20</bounds>
				<static>Round</static>
			</label>
			<simplenumber name="round">
				<bounds>-95,-43,40,20</bounds>
				<frame name="ct_groupbox" offset="5,5,5,5" />
				<gmeditonly />
			</simplenumber>
			<buttoncontrol name="advance_round">
				<bounds>-55,-45,33,26</bounds>
				<icon normal="button_ctnextround" pressed="button_ctnextround_down" />
				<tooltip text="Next round" />
				<script>
					function onInit()
					registerMenuItem("Advance 5", "num5", 4);
					registerMenuItem("Advance 10", "num10", 5);
					registerMenuItem("Advance 15", "num15", 6);
					registerMenuItem("Advance 20", "num20", 7);
					end

					function onMenuSelection(selection)
					if selection == 4 then
					CombatManager.nextRound(5);
					elseif selection == 5 then
					CombatManager.nextRound(10);
					elseif selection == 6 then
					CombatManager.nextRound(15);
					elseif selection == 7 then
					CombatManager.nextRound(20);
					end
					end

					function onButtonPress()
					CombatManager.nextRound(1);
					end

					function onDragStart(button, x, y, draginfo)
					draginfo.setType("combattrackernextround");
					draginfo.setIcon(icon[1].normal[1]);

					return true;
					end
				</script>
			</buttoncontrol>

			<resize_ctbox />
			<close_ctbox />
		</sheetdata>
	</windowclass>

	<windowclass name="ct_entry">
		<margins control="0,0,0,2" />
		<frame>ctentrybox</frame>
		<sizelimits>
			<minimum height="40" />
		</sizelimits>
		<script file="ct/scripts/ct_entry.lua" />
		<sheetdata>
			<hs name="tokenrefid" />
			<hs name="tokenrefnode" />
			<hn name="tokenscale">
				<default>1</default>
				<script>
					function onValueChanged()
					window.token.onScaleChanged();
					end
				</script>
			</hn>

			<genericcontrol name="active_spacer_top">
				<anchored width="0" height="5">
					<top />
					<left />
				</anchored>
				<invisible />
			</genericcontrol>

			<buttonfield name="active">
				<anchored width="33" height="40">
					<top parent="active_spacer_top" anchor="bottom" />
					<left />
				</anchored>
				<state icon="ct_passive" />
				<state icon="ct_active" />
				<script file="ct/scripts/ct_active.lua" />
			</buttonfield>
			<tokenfield name="token">
				<anchored width="25" height="25">
					<top parent="active_spacer_top" anchor="bottom" offset="7" />
					<left offset="33" />
				</anchored>
				<empty>token_empty</empty>
				<script file="ct/scripts/ct_token.lua" />
			</tokenfield>
			<buttonfield name="tokenvis">
				<anchored to="token" position="belowleft" offset="0,1"
					width="20" height="20" />
				<state icon="visibilityoff" tooltip="Show NPC" />
				<state icon="visibilityon" tooltip="Hide NPC" />
				<invisible />
				<script>
					function onValueChanged()
					window.onVisibilityChanged();
					end
				</script>
			</buttonfield>

			<genericcontrol name="rightanchor">
				<anchored width="0" height="0">
					<top parent="active_spacer_top" anchor="bottom" offset="10" />
					<right />
				</anchored>
				<invisible />
			</genericcontrol>
			<button_idelete name="idelete">
				<anchored to="rightanchor">
					<top />
					<right anchor="left" relation="relative" offset="-12" />
				</anchored>
				<script>
					function onButtonPress()
					window.delete();
					end
				</script>
			</button_idelete>

			<linkfield name="link">
				<anchored to="rightanchor" width="20" height="20">
					<top />
					<right anchor="left" relation="relative" offset="-8" />
				</anchored>
				<class>npc</class>
				<readonly />
				<script>
					function onValueChanged()
					window.onLinkChanged();
					end
				</script>
			</linkfield>

			<buttoncontrol name="activateeffects">
				<anchored to="rightanchor" width="20" height="20">
					<top />
					<right anchor="left" relation="relative" offset="-5" />
				</anchored>
				<state icon="button_effect" tooltip="Notes" />
				<state icon="button_effect_down" />
				<script>
					function onValueChanged()
					window.setEffectsVisible();
					window.windowlist.onEntrySectionToggle();
					end
				</script>
			</buttoncontrol>
			<buttoncontrol name="activatespacing">
				<anchored to="rightanchor" width="20" height="20">
					<top />
					<right anchor="left" relation="relative" />
				</anchored>
				<state icon="button_space" tooltip="Space and Reach" />
				<state icon="button_space_down" />
				<script>
					function onValueChanged()
					window.setSpacingVisible();
					window.windowlist.onEntrySectionToggle();
					end
				</script>
			</buttoncontrol>

			<button_iconcycler name="friendfoe">
				<anchored to="rightanchor" width="20" height="20">
					<top />
					<right anchor="left" relation="relative" offset="-5" />
				</anchored>
				<parameters>
					<icons>ct_faction_friend|ct_faction_neutral|ct_faction_foe</icons>
					<values>friend|neutral|foe</values>
					<tooltips>Friendly|Neutral|Hostile</tooltips>
					<defaulttooltip>Faction</defaulttooltip>
					<defaulticon>ct_faction_empty</defaulticon>
				</parameters>
				<gmeditonly />
				<script>
					function onValueChanged()
					window.onFactionChanged();
					end
				</script>
			</button_iconcycler>

			<number_ct_crosslink name="initresult">
				<anchored to="rightanchor" width="30" height="20">
					<top />
					<right anchor="left" relation="relative" offset="-10" />
				</anchored>
				<hideonvalue>0</hideonvalue>
				<tabtarget prev="name" />
				<script>
					function update()
					window.windowlist.applySort();
					end
				</script>
			</number_ct_crosslink>

			<string_ctname name="name">
				<anchored height="20">
					<top parent="active_spacer_top" anchor="bottom" offset="10" />
					<left parent="token" anchor="right" offset="5" />
					<right parent="rightanchor" anchor="left" relation="relative"
						offset="-10" />
				</anchored>
				<tabtarget next="initresult" />
			</string_ctname>

			<!-- Space subsection -->
			<icon_ctsection name="spacingicon">
				<icon>button_space_down</icon>
			</icon_ctsection>

			<number_ct name="space">
				<anchored width="25" height="20">
					<top parent="name" anchor="bottom" relation="relative" offset="10" />
					<left parent="spacingicon" anchor="right" offset="47" />
				</anchored>
				<description text="Size" />
				<hideonvalue value="0" />
				<default>1</default>
			</number_ct>
			<label name="spacelabel">
				<anchored to="space" position="lefthigh" offset="10,0" />
				<static>Size</static>
			</label>

			<number_ct name="reach">
				<anchored to="space" position="righthigh" offset="60,0" />
				<description text="Reach" />
				<hideonvalue value="0" />
				<default>1</default>
			</number_ct>
			<label name="reachlabel">
				<anchored to="reach" position="lefthigh" offset="10,0" />
				<static>Reach</static>
			</label>

			<frame_ctsub name="frame_spacing">
				<anchored>
					<top parent="spacingicon" />
					<bottom parent="space" />
				</anchored>
			</frame_ctsub>

			<!-- Effect subsection -->
			<icon_ctsection name="effecticon">
				<icon>button_effect_down</icon>
			</icon_ctsection>

			<windowlist name="effects">
				<anchored>
					<top parent="name" anchor="bottom" relation="relative" offset="10" />
					<left parent="effecticon" anchor="right" offset="8" />
					<right offset="-12" />
				</anchored>
				<datasource>.effects</datasource>
				<class>ct_effect</class>
				<createonempty />
				<noscroll />
				<menutext>Note</menutext>
				<script file="ct/scripts/ct_effectlist.lua" />
			</windowlist>

			<frame_ctsub name="frame_effects">
				<anchored>
					<top parent="effecticon" />
					<bottom parent="effects" />
				</anchored>
			</frame_ctsub>

			<label name="effects_label">
				<anchored>
					<top parent="name" anchor="bottom" relation="current" offset="2" />
					<left offset="63" />
				</anchored>
				<static>Notes:</static>
				<nodrag />
				<invisible />
			</label>
			<stringcontrol name="effects_str">
				<anchored>
					<top parent="name" anchor="bottom" relation="relative" offset="2" />
					<left parent="effects_label" anchor="right" offset="5" />
					<right offset="-10" />
				</anchored>
				<multilinespacing>20</multilinespacing>
				<font>sheettext</font>
				<static />
				<nodrag />
				<invisible />
			</stringcontrol>

			<genericcontrol name="spacer">
				<anchored width="0" height="9">
					<top parent="name" anchor="bottom" relation="relative" />
					<left />
				</anchored>
			</genericcontrol>

			<genericcontrol name="active_spacer_bottom">
				<anchored width="0" height="5">
					<top parent="name" anchor="bottom" relation="relative" />
					<left />
				</anchored>
				<invisible />
			</genericcontrol>
		</sheetdata>
	</windowclass>

	<windowclass name="ct_effect">
		<margins control="0,0,0,2" />
		<script file="ct/scripts/ct_effect.lua" />
		<sheetdata>
			<buttonfield name="isgmonly">
				<bounds>2,7,24,10</bounds>
				<state icon="button_toggle_visible" tooltip="Visible to All" />
				<state icon="button_toggle_gm" tooltip="Visible to GM" />
			</buttonfield>

			<genericcontrol name="rightanchor">
				<anchored height="0" width="0">
					<top />
					<right />
				</anchored>
			</genericcontrol>
			<button_idelete name="idelete">
				<anchored>
					<top offset="2" />
					<right parent="rightanchor" anchor="left" relation="relative"
						offset="-2" />
				</anchored>
				<tooltip text="Delete Note" />
				<invisible merge="delete" />
			</button_idelete>

			<string_ct_effect name="label">
				<anchored position="insidetopleft" offset="31,2">
					<right parent="rightanchor" anchor="left" relation="relative"
						offset="-5" />
				</anchored>
				<multilinespacing>20</multilinespacing>
			</string_ct_effect>
		</sheetdata>
	</windowclass>
</root>
