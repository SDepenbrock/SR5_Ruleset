<root>
	<windowclass name="partysheet_host">
		<frame>partysheet</frame>
		<placement>
			<size width="770" height="500" />
		</placement>
		<sizelimits>
			<minimum width="770" height="500" />
			<dynamic />
		</sizelimits>
		<softclose />
		<nodelete />
		<sheetdata>
			<windowtitlebar>
				<static>Party Sheet</static>
			</windowtitlebar>

			<subwindow name="inventory">
				<bounds>0,0,-1,-1</bounds>
				<class>ps_inventory</class>
			</subwindow>
			<subwindow name="order">
				<bounds>0,0,-1,-1</bounds>
				<class>ps_order</class>
			</subwindow>

			<tabs_partysheet>
				<tab>
					<icon>tab_inventory</icon>
					<subwindow>inventory</subwindow>
				</tab>
				<tab>
					<icon>tab_order</icon>
					<subwindow>order</subwindow>
				</tab>
			</tabs_partysheet>

			<resize_partysheet />
			<close_partysheet />
		</sheetdata>
	</windowclass>

	<windowclass name="partysheet_client">
		<frame>partysheet</frame>
		<placement>
			<size width="600" height="400" />
		</placement>
		<sizelimits>
			<minimum width="600" height="400" />
			<dynamic />
		</sizelimits>
		<softclose />
		<nodelete />
		<playercontrol />
		<sheetdata>
			<windowtitlebar>
				<static>Party Sheet</static>
			</windowtitlebar>

			<subwindow name="inventory">
				<bounds>0,0,-1,-1</bounds>
				<class>client_ps_inventory</class>
			</subwindow>
			<subwindow name="order">
				<bounds>0,0,-1,-1</bounds>
				<class>ps_order</class>
			</subwindow>

			<tabs_partysheet>
				<tab>
					<icon>tab_inventory</icon>
					<subwindow>inventory</subwindow>
				</tab>
				<tab>
					<icon>tab_order</icon>
					<subwindow>order</subwindow>
				</tab>
			</tabs_partysheet>

			<resize_partysheet />
			<close_partysheet />
		</sheetdata>
	</windowclass>
</root>