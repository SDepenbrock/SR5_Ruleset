<root>
	<template name="hn">
		<numberfield>
			<bounds>0,0,0,0</bounds>
			<invisible />
		</numberfield>
	</template>
	<template name="hnc">
		<numbercontrol>
			<bounds>0,0,0,0</bounds>
			<invisible />
		</numbercontrol>
	</template>
	<template name="hs">
		<stringfield>
			<bounds>0,0,0,0</bounds>
			<invisible />
		</stringfield>
	</template>
	<template name="hsc">
		<stringcontrol>
			<bounds>0,0,0,0</bounds>
			<invisible />
		</stringcontrol>
	</template>
	<template name="hlink">
		<windowreferencefield>
			<bounds>0,0,0,0</bounds>
			<invisible />
		</windowreferencefield>
	</template>
	<template name="htoken">
		<tokenfield>
			<bounds>0,0,0,0</bounds>
			<invisible />
		</tokenfield>
	</template>

	<template name="label">
		<stringcontrol>
			<anchored height="20" />
			<font>sheetlabel</font>
			<nodrag />
			<readonly />
		</stringcontrol>
	</template>
	<template name="label_frametop">
		<label>
			<anchored position="insidetop" offset="0,10" />
			<center />
		</label>
	</template>

	<template name="stringu">
		<stringfield>
			<font>sheettext</font>
			<selectioncolor>FFD296</selectioncolor>
			<lineoffset default="on" mergerule="replace">1</lineoffset>
		</stringfield>
	</template>
	<template name="simplestring">
		<stringfield>
			<droptypes>
				<type>string</type>
			</droptypes>
			<font>sheettext</font>
			<selectioncolor>FFD296</selectioncolor>
		</stringfield>
	</template>
	<template name="basicstring">
		<simplestring>
			<frame mergerule="replace" name="fielddark" offset="7,5,7,5"
				hidereadonly="true" />
			<stateframe>
				<keyedit name="fieldfocus" offset="7,5,7,5" />
				<hover name="fieldfocus" offset="7,5,7,5" hidereadonly="true" />
				<drophilight name="fieldfocus" offset="7,5,7,5"
					hidereadonly="true" />
			</stateframe>
		</simplestring>
	</template>

	<template name="number">
		<numberfield>
			<noreset />
			<script file="common/scripts/number.lua" />
		</numberfield>
	</template>
	<template name="numberc">
		<numbercontrol>
			<noreset />
			<script file="common/scripts/number.lua" />
		</numbercontrol>
	</template>
	<template name="simplenumber">
		<number>
			<droptypes>
				<type>number</type>
			</droptypes>
			<font>sheetnumber</font>
		</number>
	</template>
	<template name="simplenumberc">
		<numberc>
			<droptypes>
				<type>number</type>
			</droptypes>
			<font>sheetnumber</font>
		</numberc>
	</template>
	<template name="basicnumber">
		<simplenumber>
			<frame mergerule="replace" name="fielddark" offset="7,5,7,5" />
			<stateframe>
				<keyedit name="fieldfocus" offset="7,5,7,5" />
				<hover name="fieldfocus" offset="7,5,7,5" hidereadonly="true" />
				<drophilight name="fieldfocus" offset="7,5,7,5"
					hidereadonly="true" />
			</stateframe>
		</simplenumber>
	</template>
	<template name="basicnumberc">
		<simplenumberc>
			<frame mergerule="replace" name="fielddark" offset="7,5,7,5" />
			<stateframe>
				<keyedit name="fieldfocus" offset="7,5,7,5" />
				<hover name="fieldfocus" offset="7,5,7,5" hidereadonly="true" />
				<drophilight name="fieldfocus" offset="7,5,7,5"
					hidereadonly="true" />
			</stateframe>
		</simplenumberc>
	</template>
	<template name="number_linked">
		<simplenumber>
			<readonly />
			<source mergerule="resetandadd" />
			<script file="common/scripts/number_linked.lua" />
		</simplenumber>
	</template>
	<template name="number_modifier">
		<number_linked>
			<script file="common/scripts/number_modifier.lua" />
		</number_linked>
	</template>
	<template name="number_dropadd">
		<basicnumber>
			<stateframe>
				<drophilight name="fieldfocusplus" />
			</stateframe>
			<script>
				function onDrop(x, y, draginfo)
				if draginfo.isType("number") then
				setValue(getValue() + draginfo.getNumberData());
				return true;
				end
				end
			</script>
		</basicnumber>
	</template>

	<template name="simpledice">
		<diefield>
			<droptypes>
				<type>dice</type>
			</droptypes>
		</diefield>
	</template>
	<template name="basicdice">
		<simpledice>
			<stateframe>
				<drophilight name="fieldfocus" offset="7,5,7,5"
					hidereadonly="true" />
			</stateframe>
			<script>
				function onInit()
				onValueChanged();
				end
				function onValueChanged()
				if isEmpty() then
				setFrame("fielddice", 7,5,7,5);
				else
				setFrame("fielddark", 7,5,7,5);
				end
				end
			</script>
		</simpledice>
	</template>

	<template name="linkcontrol">
		<windowreferencecontrol>
			<icon normal="button_link" pressed="button_link_down" empty="button_link_empty" />
			<description mergerule="replace" field="name" />
		</windowreferencecontrol>
	</template>
	<template name="linkfield">
		<windowreferencefield>
			<icon normal="button_link" pressed="button_link_down" empty="button_link_empty" />
			<description mergerule="replace" field="name" />
		</windowreferencefield>
	</template>

	<template name="simpleft">
		<formattedtextfield>
			<font normal="reference-r" bold="reference-b" italic="reference-i"
				bolditalic="reference-bi" title="reference-h" />
			<icon link="button_link" emptylink="button_link_empty" chat="button_speak" />
			<selectioncolor>#FFD296</selectioncolor>
		</formattedtextfield>
	</template>
	<template name="basicft">
		<simpleft>
			<frame mergerule="replace" name="fielddark" offset="7,5,7,5"
				hidereadonly="true" />
			<stateframe>
				<keyedit name="fieldfocus" offset="7,5,7,5" />
				<hover name="fieldfocus" offset="7,5,7,5" hidereadonly="true" />
				<drophilight name="fieldfocus" offset="7,5,7,5"
					hidereadonly="true" />
			</stateframe>
		</simpleft>
	</template>

	<template name="anchor_column">
		<genericcontrol>
			<anchored position="insidetop" offset="0,-5" height="0" />
			<disabled />
			<invisible />
		</genericcontrol>
	</template>
	<template name="line_column">
		<genericcontrol>
			<anchored height="3">
				<top parent="columnanchor" anchor="bottom" relation="relative"
					offset="7" />
				<left />
				<right />
			</anchored>
			<frame name="separatorline" />
			<disabled />
		</genericcontrol>
	</template>
	<template name="spacer_column">
		<genericcontrol>
			<anchored height="0">
				<top parent="columnanchor" anchor="bottom" relation="relative"
					offset="5" />
				<left />
				<right />
			</anchored>
			<disabled />
		</genericcontrol>
	</template>

	<template name="label_column">
		<label>
			<anchored>
				<top parent="columnanchor" anchor="bottom" relation="current"
					offset="7" />
				<left />
			</anchored>
		</label>
	</template>
	<template name="label_column_right">
		<label>
			<anchored>
				<top />
				<right parent="" offset="-60" />
			</anchored>
		</label>
	</template>

	<template name="string_column">
		<basicstring>
			<anchored>
				<top parent="columnanchor" anchor="bottom" relation="relative"
					offset="7" />
				<left offset="97" />
				<right offset="-5" />
			</anchored>
			<multilinespacing>20</multilinespacing>
			<script>
				function onInit()
				local node = getDatabaseNode();
				if not node or node.isReadOnly() then
				setFrame(nil);
				end
				end
			</script>
		</basicstring>
	</template>
	<template name="string_columnh">
		<string_column>
			<script file="common/scripts/column_string.lua" />
		</string_column>
	</template>
	<template name="string_column_left">
		<string_column>
			<anchored width="60">
				<right merge="delete" />
			</anchored>
		</string_column>
	</template>
	<template name="string_column_full">
		<basicstring>
			<anchored>
				<top parent="columnanchor" anchor="bottom" relation="relative"
					offset="7" />
				<left offset="5" />
				<right offset="-5" />
			</anchored>
			<multilinespacing>20</multilinespacing>
		</basicstring>
	</template>

	<template name="number_column">
		<basicnumber>
			<anchored width="40" height="20">
				<top parent="columnanchor" anchor="bottom" relation="relative"
					offset="7" />
				<left offset="97" />
			</anchored>
		</basicnumber>
	</template>
	<template name="number_columnh">
		<number_column>
			<script file="common/scripts/column_number.lua" />
		</number_column>
	</template>
	<template name="number_column_right">
		<basicnumber>
			<anchored width="40" height="20">
				<top />
				<right parent="" offset="-5" />
			</anchored>
		</basicnumber>
	</template>

	<template name="ft_column">
		<basicft>
			<anchored>
				<top parent="columnanchor" anchor="bottom" relation="relative"
					offset="7" />
				<left offset="5" />
				<right offset="-5" />
			</anchored>
		</basicft>
	</template>
	<template name="ft_columnh">
		<ft_column>
			<script file="common/scripts/column_ft.lua" />
		</ft_column>
	</template>

	<template name="header_column">
		<label>
			<anchored height="20">
				<top parent="columnanchor" anchor="bottom" relation="relative"
					offset="10" />
				<left offset="10" />
				<right offset="-10" />
			</anchored>
			<frame name="headersimple" offset="10,3,10,3" />
		</label>
	</template>

	<template name="button_activateid">
		<buttoncontrol>
			<icon normal="button_speak" pressed="button_speak_down" />
			<script>
				function onButtonPress()
				GmIdentityManager.addIdentity(window.name.getValue());
				end
			</script>
		</buttoncontrol>
	</template>
</root>
